{
  "name": "cotya/openmage-demo",
  "require": {
    "aydin-hassan/magento-core-composer-installer": "*",
    "openmage/magento-lts": "20.*",
    "magento-hackathon/magento-composer-installer": "4.0.1 as 3.2.3",
    "cweagans/composer-patches": "^1.6",
    "composer/composer": "^2"
  },
  "extra": {
    "//patches-file": "patches/composer.patches.json",
    "magento-core-package-type": "magento-source",
    "magento-root-dir": "htdocs",
    "magento-core-deploy" : {
      "git-ignore-append": false,
      "git-ignore-enable": false,
      "excludes": [
        "app/etc/local.xml"
      ]
    }
  }
}
